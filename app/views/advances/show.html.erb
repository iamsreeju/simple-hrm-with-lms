<div class="row-fluid">
	<label><strong class="alert-success">Advance/Credit</strong></label>	
	<div class="hr hr32 hr-dotted"></div>

	<p id="notice"><%= notice %></p>

	<p class="text-info row-fluid">
	  <b class="span2">User:</b>
	  <%= @advance.user.name %>
	</p>

	<p class="text-info row-fluid">
		<b class="span2">Designation:</b>
		<%= @memo.user.designation.designation_name rescue "" %>
	</p>

	<p class="text-info row-fluid">
	  <b class="span2">Amount:</b>
	  <%= @advance.amount %>
	</p>

	<p class="text-info row-fluid">
	  <b class="span2">Took at:</b>
	  <%= @advance.took_at %>
	</p>

	<p class="text-info row-fluid">
	  <b class="span2">Remarks:</b>
	  <%= @advance.remarks %>
	</p>

	<div class="form-actions">
		<%= link_to 'Edit', edit_advance_path(@advance), :class => "btn btn-small btn-success" if can? :update, @advance %>
		<%= link_to 'Back', advances_path, :class => "btn btn-small" %>
	</div>
</div>
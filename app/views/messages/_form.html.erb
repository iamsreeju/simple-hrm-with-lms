<%= simple_form_for(@message, :html => {:class => "form-horizontal"}) do |f| %>
   <%= f.error_notification %>

   <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :message_date, label: "Date" %>
    <%= f.input :description %>
    <%#= f.input :description, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } %>
  </div>

  <div class="form-actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= link_to 'Back', messages_path, :class => "btn btn-small" %>
  </div>
<% end %>

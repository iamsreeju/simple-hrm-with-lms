<%= simple_form_for(@memo, :html => {:class => "form-horizontal"}) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user, include_blank: false, collection: current_user.my_subordinates.where("id != 1"), selected: @employee_page %>
    <%= f.input :title %>
    <%= f.input :message %>
    <%= f.input :action_taken %>
    <%= f.input :response %>

    <%= hidden_field_tag :employee_page, @employee_page if @employee_page %>
  </div>

  <div class="form-actions">
      <%= f.submit "Save", :class => "btn btn-success btn-small" %>
      <%= link_to 'Back', memos_path, :class => "btn btn-small" %>
  </div>
<% end %>

<p></p>
<% if notice %><p id="notice" class="alert alert-info"><%= notice %></p><% end %>

<div class="row-fluid span8">
  <div class="label label-large label-info arrowed-in arrowed-right">
        <b>Memo Info</b>
  </div>
  <table class="table table-striped table-bordered table-hover">
    <tbody>
        <tr>
            <td class="span2">Name :</td>
            <td class="span5"><%= @memo.user.name %></td>
        </tr>

        <tr>
            <td class="span2">Designation :</td>
            <td class="span5"><%= @memo.user.designation.designation_name if @memo.user.designation %></td>
        </tr>

        <tr>
            <td class="span2">Department :</td>
            <td class="span5"><%= @memo.user.designation.department.department_name if @memo.user.designation %></td>
        </tr>

        <tr>
            <td class="span2">Title :</td>
            <td class="span5"><%= @memo.title %></td>
        </tr>

        <tr>
            <td class="span2">Message :</td>
            <td class="span5"><%= @memo.message %></td>
        </tr>

        <tr>
            <td class="span2">Action Taken :</td>
            <td class="span5"><%= @memo.action_taken %></td>
        </tr>

        <tr>
            <td class="span2">Response :</td>
            <td class="span5"><%= @memo.response %></td>
        </tr>

        <tr>
            <td class="span2">Memo By :</td>
            <td class="span5"><%= @memo.manager_created.name %></td>
        </tr>  

        <tr>
            <td class="span2">Memo On :</td>
            <td class="span5"><%= @memo.created_at.strftime("%d-%m-%Y") %></td>
        </tr>      
    </tbody>
  </table>

  <div class="form-actions">
    <%= link_to 'Edit', edit_memo_path(@memo), :class => "btn btn-small btn-success" if can? :update, @memo %>
    <%= link_to 'Delete', @memo, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small btn-danger" if can? :destroy, @memo %></td>
    <%= link_to 'Back', memos_path, :class => "btn btn-small" %>
  </div>
</div>
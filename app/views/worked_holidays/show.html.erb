<div class="row-fluid">
  <label><strong class="alert-success">Worked Holiday</strong></label> 
  <div class="hr hr32 hr-dotted"></div>

  <p id="notice"><%= notice %></p>

  <p class="text-info row-fluid">
    <b class="span2">User:</b>
    <%= @worked_holiday.user.name %>
  </p>

  <p class="text-info row-fluid">
    <b class="span2">Worked Date:</b>
    <%= @worked_holiday.worked_date %>
  </p>

  <div class="form-actions">
    <%= link_to 'Edit', edit_worked_holiday_path(@worked_holiday), :class => "btn btn-small btn-success" if can? :update, holiday %>
    <%= link_to 'Back', worked_holidays_path, :class => "btn btn-small" %>
  </div>
</div>
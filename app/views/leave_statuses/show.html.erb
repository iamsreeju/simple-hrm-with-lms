<div class="row-fluid">
  <label><strong class="alert-success">Leave</strong></label> 
  <div class="hr hr32 hr-dotted"></div>

  <p id="notice"><%= notice %></p>

  <p class="text-info row-fluid">
    <b class="span2">User:</b>
    <%= @leave_status.user.name %>
  </p>

  <p class="text-info row-fluid">
    <b class="span2">Leave Type:</b>
    <%= @leave_status.leave_type.leave_type_name %>
  </p>

  <p class="text-info row-fluid">
    <b class="span2">Available:</b>
    <%= @leave_status.available %>
  </p>

  <div class="form-actions">
    <%= link_to 'Edit', edit_leave_status_path(@leave_status), :class => "btn btn-small btn-success" if can? :update, @leave_status %>
    <%= link_to 'Back', leave_statuses_path, :class => "btn btn-small" %>
  </div>
</div>

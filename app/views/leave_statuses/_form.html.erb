<%= simple_form_for(@leave_status, :html => {:class => "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user, include_blank: false, selected: @employee_page %>
    <%= f.association :leave_type, include_blank: false, label_method: "leave_type_name" %>
    <%= f.input :available %>

    <%= hidden_field_tag :employee_page, @employee_page if @employee_page %>
  </div>

  <div class="form-actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= link_to 'Back', leave_statuses_path, :class => "btn btn-small" %>
  </div>
<% end %>

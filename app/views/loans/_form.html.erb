<%= simple_form_for(@loan, :html => {:class => "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user, include_blank: false, selected: @employee_page %>
    <%= f.input :amount %>
    <%= f.input :took_at, start_year: Date.today.year - 50, end_year: Date.today.year %>
    <%= f.input :monthly_cut %>
    <%= f.input :balance %>

    <%= hidden_field_tag :employee_page, @employee_page if @employee_page %>
  </div>

  <div class="form-actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= link_to 'Back', loans_path, :class => "btn btn-small" %>
  </div>
<% end %>

<%= simple_form_for(@designation, :html => {:class => "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :department, label_method: :department_name, value_method: :id, include_blank: false %>
    <%= f.input :designation_name %>
  </div>

  <div class="form-actions">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= link_to 'Cancel', designations_path, :class => "btn btn-small" %>
  </div>
<% end %>